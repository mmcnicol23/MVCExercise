@using System.Reflection
@model IEnumerable<Product>

<h2>Products</h2>

<table class="table">
   
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>Sale</th>
        <th>Stock</th>
    </tr>
    
   @foreach (var product in @Model)
    {
        <tr>
            <td>@product.ProductID</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.CategoryID</td>
            <td>@product.OnSale</td>
            <td>@product.StockLevel</td>
        </tr>
    }
</table>